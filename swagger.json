        "/api/videos/{id}/approve": {
            "put": {
                "summary": "Approve a video (Admin only)",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Video ID"
                    }
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Video approved successfully"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "403": {
                        "description": "Access denied"
                    },
                    "404": {
                        "description": "Video not found"
                    }
                }
            }
        },
        "/api/videos/{videoId}/comments": {
            "post": {
                "summary": "Add a comment to a video",
                "parameters": [
                    {
                        "in": "path",
                        "name": "videoId",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Video ID"
                    }
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "comentario": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Comment added successfully"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Video not found"
                    }
                }
            }
        },
        "/api/videos/{videoId}/rate": {
            "post": {
                "summary": "Rate a video",
                "parameters": [
                    {
                        "in": "path",
                        "name": "videoId",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Video ID"
                    }
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "valoracion": {
                                        "type": "integer",
                                        "min": 1,
                                        "max": 5
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Video rated successfully"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Video not found"
                    }
                }
            }
        }
    }